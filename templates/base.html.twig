            <a class="nav-link text-white" href="{{ path('mission') }}">Mission</a>
            <a class="nav-link text-white" href="{{ path('cuisine') }}">Nos Part-cuisiniers</a>
            <a class="nav-link text-white" href="{{ path('blog') }}">Blog</a>
