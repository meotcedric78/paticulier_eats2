                <a class="nav-link text-white" href="{{ path('send_form')}}">Nous contacter</a>
            </li>
            <li class="nav-item">
                <a style="margin-left: 400px; color: white;" href="{{ path('home') }}">Parteats</a>
            </li>
        </ul>

        {% if app.user %}




            <div class="nav-item dropdown my-2 my-lg-0 mr-5">
                <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    utilisateur
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="{{ path('profil') }}">Profil</a>

                    {% if is_granted('ROLE_ADMIN') %}
                        <a class="dropdown-item" href="{{ path('backoffice') }}">Back-office</a>
                        <a class="dropdown-item" href="{{ path('plat') }}">Mes plats</a>
                    {% endif %}
                    {% if is_granted('ROLE_USER') %}
                        <a class="dropdown-item" href="{{ path('backofficeCuisinier') }}">Gestion</a>
                        <a class="dropdown-item" href="{{ path('plat') }}">Mes plats</a>
                    {% endif %}

                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path('logout') }}">Déconnexion</a>
                </div>
            </div>
        {% else %}

            <a class="nav-link text-white " href="{{path('login')}}">Connexion</a>
            <a class="btn btn-light me-3 " href="{{ path('inscription') }}">Inscription gratuite</a>

        {% endif %}
    </div>

    {% if is_granted('ROLE_USER') %}
    <a class="text-white" href="{{ path('panier') }}">Panier</a>
    {% endif %}
    </div>
</nav>



    {% block body %}{% endblock %}
