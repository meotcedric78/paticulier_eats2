{% extends 'base.html.twig' %}

{% block title %}Nos part-cuisiniers{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>

<div class="example-wrapper">
    <h1 style="text-align: center">Nos part-cuisiniers</h1>

    <div class="card bg-dark text-white mb-3">
        <img src="images/cuisine/cuisine-creative.jpg" class="card-img" alt="creativité en cuisine">
        <div class="card-img-overlay">
            <h5 class="card-title" style="color: black;">Un peu de créativité!</h5>
            <p class="card-text" style="margin: 3050px; margin-right: 70px; color: black; size:30px"><strong>Montrer
                    nous un peu de creativité et surtout le gout et vos orgines<strong/></p>

        </div>
    </div>

    <div class="row justify-content-around">

        {% for produit in Produits %}
            <div class="card border-danger " style="max-width: 18rem;">
                <h5 class="card-title">{{ produit.nom }}</h5>
                <h4>{{ produit.cuisinier.nom }} {{ produit.cuisinier.prenom }}</h4>
                <h4>{{ produit.cuisinier.ville }} - {{ produit.cuisinier.cp }}</h4>
                <div class="card-img-top mt-3">
                    <img src="{{ asset('images/imagesUpload/') }}{{ produit.image }}" alt="{{ produit.nom }}"
                         width="250" height="300">
                </div>
                <div class="card-body ">
                    <div>{{ produit.categorie.nom }} -
                        {% for sousCategorie in produit.sousCategories %}
                            {{ sousCategorie.nom }}
                        {% endfor %}
                    </div>
                    <p class="card-text">{{ produit.description }}</p>
                    <div>{{ produit.prix }} €</div>
                    <a href="{{ path('show_produit', {'id': produit.id}) }}" class="btn btn-secondary">Voir</a>
                    <a href="{{ path('ajout_panier', {'id': produit.id,'param':"home"}) }}" class="btn btn-secondary">
                        Ajouter au panier
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}