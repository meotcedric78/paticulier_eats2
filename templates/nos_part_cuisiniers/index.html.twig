{% extends 'base.html.twig' %}

{% block title %}Nos part-cuisiniers{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>




        <img src="{{ asset('image/Nos part-cuisiniers.jpg') }}" class= "img-fluid" style="width:100%; height:600px;
        background-size: cover" alt="Nos cuisinier ">
    <br>
        <div class="text-center">
            <h1 class="m-3 p-3 "> Liste des plats près de chez vous </h1>
    </div>




    <div class="row justify-content-around m-3">

        {% for produit in Produits %}
            <div class="card border-danger p-3" style="max-width: 18rem;background-color: #F0B048" >
            <div>
                <h5 class="card-title"> {{ produit.nom }} </h5>
            </div>
                <h4>{{ produit.cuisinier.nom }} {{ produit.cuisinier.prenom }}</h4>
                <h4>{{ produit.cuisinier.ville }} - {{ produit.cuisinier.cp }}</h4>
                <div class="card-img-top mt-3 p-3">
                    <img src="{{ asset('images/imagesUpload/') }}{{ produit.image }}" alt="{{ produit.nom }}"
                         width="250" height="300">
                </div>
                <div class="card-body ">
                    <div>{{ produit.categorie.nom }} -
                        {% for sousCategorie in produit.sousCategories %}
                            {{ sousCategorie.nom }}
                        {% endfor %}
                    </div>
                    <p class="card-text font-weight-bold">{{ produit.description }}</p>
                    <div class="font-weight-bold">{{ produit.prix }}€ </div>
                    <a href="{{ path('show_produit', {'id': produit.id}) }}" class="btn btn-success color-99CC5B">Voir</a>
                    <a href="{{ path('ajout_panier', {'id': produit.id,'param':"home"}) }}" class="btn btn-success color-99CC5B">
                        Ajouter au panier
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}