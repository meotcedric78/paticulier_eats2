{% extends 'base.html.twig' %}

{% block body %}
    {% for commande in commandes %}
        <table class="table border mt-">
            <thead class="thead-dark text-center">

            <tr class="text-center">
                <h2>Commande N° {{ commande.id }} du {{ commande.date | date('d-m-Y') }} | Montant:{{ commande.total }}€</h2>
            </tr>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Photo</th>
                <th scope="col">Prix unitaire</th>
                <th scope="col">quantité</th>
                <th scope="col">Prix Total</th>
                <th scope="col">Valider</th>
            </tr>
            </thead>
            <tbody class="text-center">
            {% for achat in commande.achats %}
                <tr>
                    <td>{{ achat.produit.nom }}</td>
                    <td><img width="40" height="40" src="{{ asset('images/imagesUpload/') }}{{ achat.produit.image }}" alt=""></td>
                    <td>{{ achat.produit.prix }}</td>
                    <td>{{ achat.quantite }}</td>
                    <td>{{ achat.prix }}</td>
                    <td><a href=""><button class="btn btn-warning">Valider</button></a></td>
                </tr>

            {% endfor %}
            </tbody>
        </table>
    {% endfor %}









{% endblock %}



